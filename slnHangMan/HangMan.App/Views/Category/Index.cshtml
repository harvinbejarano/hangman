
@{
    ViewBag.Title = "Categorias";
}

<div id="mainView">
    <div class="well" style="text-align:center;">
        <h2>The Hangman Game!!!</h2>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <label>Categoarias de Palabras. </label> 
        </div>

        <div class="panel-body">
            
            <form>
                <div class="form-group">
                    <label for="categoryname">Categoria</label>
                    <input type="hidden" data-bind="value:Id"/>
                    <input type="text" class="form-control input-sm" data-bind="value:Name" id="categoryname">
                    <br />
                    <button type="button" class="btn btn-default" data-bind="click:New">Nuevo</button>
                    <button type="button" class="btn btn-default" data-bind="click:Save">Agregar</button>
                </div>
                
            </form>
            <hr />
            <div class="table-responsive">
                <table id="tblFormLists" class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:list">
                        <tr>
                            <td>
                                <button id="btnFormSection" class="btn btn-default btn-xs" data-bind="click:$root.Edit">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                            </td>
                            <td>
                                <span data-bind="text:Id"></span>
                            </td>
                            <td>
                                <span data-bind="text:Name"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
          
        </div>

    </div>

</div>

@section Scripts{
    <!--ViewModel -->
    <script src="~/Scripts/App/ViewModels/CategoryViewModel.js"></script>
}

